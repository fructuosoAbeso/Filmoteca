<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlimListActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tituloPrincipal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/busqueda"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#BBBBBB"
            tools:ignore="UseAppTint" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Buscar película..."
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:paddingStart="8dp"
            android:inputType="text"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </LinearLayout>

    <!-- Botones debajo del Search Bar -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/searchBarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_flima"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="@string/VerpelículaA"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_flimb"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="@string/VerpelículaB"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="16dp" />

        <!-- Botón adicional opcional -->
        <Button
            android:id="@+id/boton_About"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="@string/Acercade"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/custom_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>