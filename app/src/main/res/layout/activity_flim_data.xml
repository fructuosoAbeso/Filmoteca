<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Datosdelapelícula"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Tarjeta de la película -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="6dp">

            <!-- Imagen de la película -->
            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/avatar"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:contentDescription="Póster de la película" />

            <!-- Contenido de texto y botones -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textTituloPelicula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título de la película"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />


                <Button
                    android:id="@+id/btnEditarPelicula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Editarpelícula"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custom_button"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnVerRelacionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Verpelícularelacionada"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custom_button" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón para volver -->
        <Button
            android:id="@+id/button_volver"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/Volveralaprincipal"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_button" />

    </LinearLayout>
</ScrollView>
